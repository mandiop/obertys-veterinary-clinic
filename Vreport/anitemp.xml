<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Create PDF Report-->
  
    <template id="report_animal">
       <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="report.external_layout"> 
                 <h1>fiche medicale de l'animal</h1>
                    <div class="page">
                        <br></br>
                        <br></br>
                        <br></br>
                        <br></br>
                        <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-xs-2" style="margin:auto;">
                            </div>
                            <center>
                                <div class="col-xs-8" style="margin:auto">
                                    <table class="table table-condensed" style="border: 3px solid black !important;">
                                        <tr>
                                            <td width="40%">
                                               
                                                <p style="text-align:center;">
                                                    <h2><strong><span t-field="o.name"/></strong></h2>
                                                </p>
                                            </td>
                                            <td width="60%">
                                                <table>
                                                    <tr>
                                                        <td>
                                                            <p style="text-align:right;"><strong>Age: </strong></p>
                                                            <p style="text-align:right;"><strong>Group: </strong></p>
                                                            <p style="text-align:right;"><strong>Ph No: </strong></p>
                                                        </td>
                                                        <td>
                                                            <p style="text-align:left;padding-left:10px;"  t-field="o.type_animals_id"/>
                                                            <p style="text-align:left;padding-left:10px;" t-field="o.age"/>
                                                            <p style="text-align:left;padding-left:10px;" t-field="o.gender"/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                   
                                </div>
                            </center>
                           
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
